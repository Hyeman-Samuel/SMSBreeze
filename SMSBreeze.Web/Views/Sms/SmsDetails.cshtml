@model List<SMSBreeze.Models.Entities.SentReport>
@{
    ViewData["Title"] = "SmsDetails";
}

<h2>SmsDetails</h2>

@if (Model.Count() == 0 || Model == null)
{

    <a asp-action="SendSms">Send SMS</a>

}
else
{
    <p>
        <a asp-action="SendSms">Send SMS</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    Message Title
                </th>
                <th>
                    Number of Recepients
                </th>
                <th>
                    Date sent
                </th>
                <th>
                    Units Used
                </th>
                <th>

                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @item.Subject
                    </td>
                    <td>
                        @item.SentSmsDetails.Count()
                    </td>
                    <td>
                        @item.DateSent
                    </td>
                    <td>
                        @item.UnitsUsed
                    </td>
                    <td>                      
                        <a asp-action="Index" asp-route-reportId="@item.ID">View</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

}

