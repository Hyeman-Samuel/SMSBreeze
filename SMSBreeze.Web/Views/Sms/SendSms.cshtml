@model SMSBreeze.Web.Models.MessageObjectViewModel


@{
    ViewData["Title"] = "SendSms";
}
<h2>SendSms</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="SendSms" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Subject" class="control-label">Subject<small>(This will be the header)</small></label>
                <input asp-for="Subject" class="form-control" />
                <span asp-validation-for="Subject" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Message" class="control-label">Message</label>
                <textarea asp-for="Message" class="form-control"></textarea>
                <span asp-validation-for="Message" class="text-danger"></span>
            </div>

            <div class="form-group">
                <h4>From Contacts</h4>
                @foreach (var item in Model.Contacts)
                {
                    <p> @item.Name </p>
                    <input type="checkbox" name="contacts" value="@item.ID" />
                }
                <span asp-validation-for="Contacts" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label title="Recepient" class="control-label"></label>
                <h4>From Groups</h4>
                @foreach (var item in Model.Groups)
                {
                    <p> @item.GroupName </p>
                    <input type="checkbox" name="group" value="@item.ID" />
                }
                <span asp-validation-for="GroupedContacts" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label title="From Contacts" class="control-label">Other(Comma Seperated)</label>
                <input asp-for="ToContacts" class="form-control" />
                <span asp-validation-for="ToContacts" class="text-danger"></span>
            </div>


            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

